<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="fill_parent"
                        android:text="Enter Original Price:"
                        android:gravity="start|center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:textSize="18sp"
                        android:background="@android:color/transparent"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="fill_parent"
                        android:text="$"
                        android:gravity="end|center_vertical"
                        android:textSize="22sp"
                        android:background="@android:color/transparent"
                        />
                    <EditText
                        android:text=""
                        android:textSize="22sp"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:id="@+id/priceEditText"
                        android:layout_gravity="bottom|center_horizontal"
                        android:gravity="start|bottom"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="fill_parent"
                        android:inputType="textNoSuggestions">
                    </EditText>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="fill_parent"
                        android:text=""
                        android:background="@android:color/transparent"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="fill_parent"
                        android:text="Enter Sale Percentage:"
                        android:gravity="start|center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:textSize="18sp"
                        android:background="@android:color/transparent"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="fill_parent"
                        android:text=""
                        android:background="@android:color/transparent"
                        />
                    <EditText
                        android:text=""
                        android:textSize="22sp"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:id="@+id/saleEditText"
                        android:layout_gravity="bottom|center_horizontal"
                        android:gravity="end|bottom"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="fill_parent"
                        android:inputType="textNoSuggestions">
                    </EditText>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="fill_parent"
                        android:text="%"
                        android:gravity="start|center_vertical"
                        android:textSize="22sp"
                        android:background="@android:color/transparent"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="18sp"
                        android:text="You Saved:"
                        android:textCursorDrawable="@null"
                        android:id="@+id/saleTotalHeader"
                        android:layout_gravity="top|center_horizontal"
                        android:background="@android:color/transparent"
                        android:gravity="start|center_vertical"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent">
                    </TextView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:text="$"
                        android:gravity="start|center_vertical"
                        android:id="@+id/saleTotalTextView"
                        android:textSize="22sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="18sp"
                        android:text="Final Price:"
                        android:textCursorDrawable="@null"
                        android:id="@+id/finalPriceHeader"
                        android:layout_gravity="top|center_horizontal"
                        android:background="@android:color/transparent"
                        android:gravity="start|center_vertical"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent">
                    </TextView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:text="$"
                        android:gravity="start|center_vertical"
                        android:id="@+id/finalPriceTextView"
                        android:textSize="22sp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="bottom|center_horizontal"
                    android:stretchColumns="*"
                    android:id="@+id/salebuttons">

                    <TableRow
                        android:layout_weight="1"
                        android:layout_height="0dp">
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/salesevenbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="7"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/saleeightbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="8"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/saleninebtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="9"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/saleclearbtn"
                            android:background="@drawable/opbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="clear"
                            />

                    </TableRow>

                    <TableRow
                        android:layout_weight="1"
                        android:layout_height="0dp">
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/salefourbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="4"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/salefivebtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="5"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/salesixbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="6"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/saledeletebtn"
                            android:background="@drawable/opbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="delete"
                            />

                    </TableRow>

                    <TableRow
                        android:layout_weight="1"
                        android:layout_height="0dp">
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/saleonebtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="1"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/saletwobtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="2"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/salethreebtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="3"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/salenextfieldbtn"
                            android:background="@drawable/opbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="next"
                            />

                    </TableRow>

                    <TableRow
                        android:layout_weight="1"
                        android:layout_height="0dp">
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/saledecimalbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="."
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/salezerobtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="0"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/saledoublezerobtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text=".00"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/saleequalsbtn"
                            android:background="@drawable/equalsbtn_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="="
                            />

                    </TableRow>

                </TableLayout>

            </LinearLayout>


        </LinearLayout>


    </FrameLayout>

    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@color/White"
        android:stackFromBottom="false"
        android:choiceMode="singleChoice" />

</android.support.v4.widget.DrawerLayout>