<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:baselineAligned="false">

                <TextView
                    android:textColor="@color/grey30"
                    android:textSize="16sp"
                    android:text=""
                    android:textCursorDrawable="@null"
                    android:id="@+id/lastOpEditText"
                    android:layout_gravity="top|center_horizontal"
                    android:background="@android:color/transparent"
                    android:gravity="bottom|end"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="fill_parent">
                </TextView>

                <EditText
                    android:textColor="@color/grey20"
                    android:textSize="26sp"
                    android:text=""
                    android:cursorVisible="true"
                    android:textCursorDrawable="@null"
                    android:id="@+id/editText"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="@android:color/transparent"
                    android:gravity="center|end"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_width="fill_parent"
                    android:inputType="textNoSuggestions">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="bottom|center_horizontal"
                    android:stretchColumns="*"
                    android:id="@+id/buttons">

                    <TableRow
                        android:layout_weight="1"
                        android:layout_height="0dp">

                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/leftbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="&lt;"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/rightbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text=">"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/deletebtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="delete"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/clearbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="clear"
                            />

                    </TableRow>

                    <TableRow
                        android:layout_weight="1"
                        android:layout_height="0dp">

                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/sinbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="sin" />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/cosbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="cos" />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/tanbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="tan" />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/ansbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="ans" />


                    </TableRow>

                    <TableRow
                        android:layout_weight="1"
                        android:layout_height="0dp">

                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/sqrtbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="sqrt" />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/powerbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="^" />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/logbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="log" />

                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/lnbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="ln" />

                    </TableRow>

                    <TableRow
                        android:layout_weight="1"
                        android:layout_height="0dp">
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/squaredbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="x^2"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/leftparenthesesbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="("
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/rightparenthesesbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text=")"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/dividebtn"
                            android:background="@drawable/opbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="/"
                            />

                    </TableRow>

                    <TableRow
                        android:layout_weight="1"
                        android:layout_height="0dp">
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/sevenbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="7"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/eightbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="8"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/ninebtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="9"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/multbtn"
                            android:background="@drawable/opbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="x"
                            />

                    </TableRow>

                    <TableRow
                        android:layout_weight="1"
                        android:layout_height="0dp">
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/fourbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="4"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/fivebtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="5"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/sixbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="6"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/subbtn"
                            android:background="@drawable/opbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="-"
                            />

                    </TableRow>

                    <TableRow
                        android:layout_weight="1"
                        android:layout_height="0dp">
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/onebtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="1"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/twobtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="2"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/threebtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="3"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/addbtn"
                            android:background="@drawable/opbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="+"
                            />

                    </TableRow>

                    <TableRow
                        android:layout_weight="1"
                        android:layout_height="0dp">
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/decimalbtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="."
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/zerobtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="0"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/negativebtn"
                            android:background="@drawable/numberbtns_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="(-)"
                            />
                        <Button
                            style="@android:style/ButtonBar"
                            android:id="@+id/equalsbtn"
                            android:background="@drawable/equalsbtn_blue"
                            android:layout_height="fill_parent"
                            android:textColor="@color/grey20"
                            android:stateListAnimator="@anim/button_anim"
                            android:text="="
                            />

                    </TableRow>

                </TableLayout>

            </LinearLayout>


        </LinearLayout>


    </FrameLayout>

    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@color/White"
        android:stackFromBottom="false"
        android:choiceMode="singleChoice" />

</android.support.v4.widget.DrawerLayout>