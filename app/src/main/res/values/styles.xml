<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="android:style/Theme.Holo">

        <item name="android:windowBackground">@color/White</item>
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowBtnStyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>
        <item name="android:textColor">@color/grey20</item>

    </style>

    <style name="CalcFont" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/grey20</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ActionBarTheme" parent="android:style/Widget.Holo.ActionBar.Solid">

        <item name="android:background">@color/blue500</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/ActionBarFont</item>
        <item name="android:height">@dimen/actionbar_height</item>

    </style>

    <style name="ActionBarFont" parent="android:style/TextAppearance.Medium">

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="OverflowBtnStyle" parent="android:style/Widget.Holo.ActionButton.Overflow">

        <item name="android:src">@mipmap/ic_action_overflow_button</item>

    </style>

    <style name="DropDownListViewStyle" parent="android:Widget.Holo.ListView.DropDown">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:background">@color/White</item>
    </style>


    <style name="AppTheme.Green">
        <item name="android:actionBarStyle">@style/ActionBarTheme.Green</item>
    </style>

    <style name="ActionBarTheme.Green">
        <item name="android:background">@color/green500</item>
    </style>


    <style name="AppTheme.Red">
        <item name="android:actionBarStyle">@style/ActionBarTheme.Red</item>
    </style>

    <style name="ActionBarTheme.Red">
        <item name="android:background">@color/red500</item>
    </style>


    <style name="AppTheme.Purple">
        <item name="android:actionBarStyle">@style/ActionBarTheme.Purple</item>
    </style>

    <style name="ActionBarTheme.Purple">
        <item name="android:background">@color/purple500</item>
    </style>


    <style name="AppTheme.Orange">
        <item name="android:actionBarStyle">@style/ActionBarTheme.Orange</item>
    </style>

    <style name="ActionBarTheme.Orange">
        <item name="android:background">@color/orange500</item>
    </style>


    <style name="AppTheme.Yellow">
        <item name="android:actionBarStyle">@style/ActionBarTheme.Yellow</item>
    </style>

    <style name="ActionBarTheme.Yellow">
        <item name="android:background">@color/yellow500</item>
    </style>


    <style name="AppTheme.BlueGrey">
        <item name="android:actionBarStyle">@style/ActionBarTheme.BlueGrey</item>
    </style>

    <style name="ActionBarTheme.BlueGrey">
        <item name="android:background">@color/bluegrey500</item>
    </style>

    <style name="AppTheme.Lime">
        <item name="android:actionBarStyle">@style/ActionBarTheme.Lime</item>
    </style>

    <style name="ActionBarTheme.Lime">
        <item name="android:background">@color/lime500</item>
    </style>

    <style name="AppTheme.Indigo">
        <item name="android:actionBarStyle">@style/ActionBarTheme.Indigo</item>
    </style>

    <style name="ActionBarTheme.Indigo">
        <item name="android:background">@color/indigo500</item>
    </style>

    <style name="AppTheme.Teal">
        <item name="android:actionBarStyle">@style/ActionBarTheme.Teal</item>
    </style>

    <style name="ActionBarTheme.Teal">
        <item name="android:background">@color/teal500</item>
    </style>


</resources>
