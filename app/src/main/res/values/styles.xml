<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="android:Theme.Holo">

        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowBtnStyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>
        <item name="android:textColor">@color/whitetext</item>

    </style>

    <style name="AppThemeLight" parent="android:Theme.Holo.Light">

        <item name="android:actionBarStyle">@style/ActionBarThemeLight</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowBtnStyleLight</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>
        <item name="android:textColor">@color/grey20</item>

    </style>

    <style name="ActionBarTheme" parent="android:Widget.Holo.ActionBar.Solid">

        <item name="android:icon">@android:color/transparent</item>
        <item name="android:height">@dimen/actionbar_height</item>
        <item name="android:background">@color/black</item>

    </style>

    <style name="ActionBarThemeLight" parent="android:Widget.Holo.ActionBar.Solid">

        <item name="android:icon">@android:color/transparent</item>
        <item name="android:height">@dimen/actionbar_height</item>
        <item name="android:background">@color/black</item>

    </style>


    <style name="OverflowBtnStyle" parent="android:Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_overflow_white</item>
    </style>

    <style name="OverflowBtnStyleLight" parent="android:Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_overflow_black</item>
    </style>

    <style name="DropDownListViewStyle" parent="android:Widget.Holo.ListView.DropDown">
        <item name="android:divider">@android:color/transparent</item>
    </style>


    <style name="AppTheme.Blue">
        <item name="android:actionBarStyle">@style/ActionBarTheme.Blue</item>
    </style>
    <style name="ActionBarTheme.Blue">
        <item name="android:background">@color/blue500</item>
    </style>

